---
import FooterCaseStudies from './FooterCaseStudies.astro'
import FooterDescription from './FooterDescription.astro'
import FooterSitemap from './FooterSitemap.astro'
import FooterContact from './FooterContact.astro'
---

<footer id='footer'>
  <FooterDescription />
  <aside>
    <FooterSitemap />
    <FooterCaseStudies />
    <FooterContact />
  </aside>
</footer>
<style is:global>
  footer {
    background-color: var(--bg-color-tertiary);
    padding-inline: 200px;
    display: flex;
    flex-wrap: wrap;
    padding-top: 80px;
    padding-bottom: 50px;
    column-gap: 20px;
    row-gap: 20px;
  }
  aside {
    flex-grow: 1;
    min-height: 30dvh;
    display: flex;
    justify-content: space-between;
  }
  h3 {
    color: var(--text-color-primary);
    text-transform: uppercase;
    font-size: 15px;
  }
  .nav-container {
    text-align: start;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-content: start;
  }
  .nav {
    color: var(--text-color-secondary);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    align-content: start;
    padding-top: 15px;
    row-gap: 15px;
  }
  .nav-title {
    font-size: 13px;
  }
  @media screen and (max-width: 992px) {
    footer {
      padding-inline: 20px;
      padding-top: 70px;
      padding-bottom: 0px;
    }
    aside {
      width: 100%;
      font-size: small;
    }
  }
</style>
