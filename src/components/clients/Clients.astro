---
import { CLIENTS_SPONSORS } from '@/constants/clients-data'
import ClientsCards from './ClientsCards.astro'
---

<section id="clients">
  <h1>Clients we worked with</h1>
  <article class='article-1'>
    {
      CLIENTS_SPONSORS.map((item) => (
        <div>
          <item.icon />
        </div>
      ))
    }
  </article>
  <ClientsCards />
  <div class='end-color'>.</div>
</section>
<style>
  section {
    position: relative;
    min-height: 50dvh;
    background-color: var(--bg-color-primary);
    padding-inline: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100px;
    row-gap: 20px;
  }
  h1 {
    text-transform: uppercase;
    font-size: 13px;
    color: var(--text-color-tertiary);
  }
  .article-1 {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
  }
  div {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .end-color {
    width: 100%;
    height: 15%;
    background-color: var(--bg-color-tertiary);
    position: absolute;
    bottom: 0;
    z-index: 0;
  }
  @media screen and (max-width: 992px) {
    section {
      padding-inline: 5%;
      padding-top: 50px;
      row-gap: 10px;
    }
    .end-color {
      height: 10%;
    }
    .article-1 {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      column-gap: 30px;
    }
  }
</style>
