---
import { SERVICES_DATA } from '@/constants/services-data'
import ServicesCard from './ServicesCard.astro'
---

<section id="services">
  <h1>Our Services</h1>
  <p>
    we feel very strong about our skills when it comes to planning, designing
    and coding applications. Here is what we love to do!
  </p>
  <div>
    {SERVICES_DATA.map((item) => <ServicesCard {...item} />)}
  </div>
  <div class='end-bg'>.</div>
</section>
<style>
  section {
    position: relative;
    min-height: 50dvh;
    padding-inline: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 10px;
  }
  .end-bg {
    width: 100%;
    color: transparent;
    pointer-events: none;
    z-index: -10;
    bottom: 0%;
    height: 10%;
    position: absolute;
    background-color: var(--bg-color-secondary);
  }
  h1 {
    color: var(--text-color-primary);
    font-weight: 500;
  }
  p {
    max-width: 65%;
    text-align: center;
    color: var(--text-color-secondary);
    font-weight: 500;
  }
  div {
    display: flex;
    column-gap: 20px;
    row-gap: 20px;
  }
  @media screen and (max-width: 900px) {
    section {
      padding-inline: 50px;
    }
    div {
      flex-wrap: wrap;
    }
    p {
      max-width: 100%;
      text-wrap: pretty;
    }
    .end-bg {
      height: 5%;
    }
  }
</style>
