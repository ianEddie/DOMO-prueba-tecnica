---
import FooterContact from './FooterContact.astro'
import FooterSitemap from './FooterSitemap.astro'
---

<footer>
  <FooterContact />
  <aside>
    <FooterSitemap />
    <FooterSitemap />
    <FooterSitemap />
  </aside>
</footer>
<style>
  footer {
    background-color: var(--bg-color-tertiary);
    min-height: 50dvh;
    padding-inline: 200px;
    display: flex;
    align-items: start;
    padding-top: 60px;
  }
  aside {
    flex-grow: 1;
    background-color: aqua;
    height: 100%;
    display: flex;
    justify-content: space-around;
    padding-block: 20px;
  }
</style>
